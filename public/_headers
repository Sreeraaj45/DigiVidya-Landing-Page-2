# Headers for optimal video delivery
/videos/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: video/mp4
  Accept-Ranges: bytes

/videos/*.webm
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: video/webm
  Accept-Ranges: bytes

/videos/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg

# Enable HTTP/2 Server Push for critical video files
/videos/digividya_demo_hq.webm
  Link: </videos/digividya_demo_poster.jpg>; rel=preload; as=image

# Compression for better performance
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block